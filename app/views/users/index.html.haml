%h3 Users
.span8
  %table.table.table-condensed
    %thead
      %tr
        %th Username
        %th Email
        %th Approved?
    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td= user.created_at.to_date
          - if !user.approved
            %td= link_to "Approve", user_approve_path(user), method: :post, data: { confirm: 'Are you sure?' }
          - else
            %td= link_to "Unapprove", user_approve_path(user), method: :post, data: { confirm: 'Are you sure?' }

