.row
  .large-12.columns
    %h5.subheader Listing surgeries

    %table
      %tr
        %th Patient
        %th Surgeon
        %th Date of surgery
        %th Hospital
        %th Side
        %th Anasthetic type
        %th Chemical
        %th Mechanical
        %th
        %th
        %th

      - @surgeries.each do |surgery|
        %tr
          %td= surgery.patient.name
          %td= surgery.user.name
          %td= surgery.date_of_surgery
          %td= surgery.hospital.name
          %td= surgery.side
          %td= surgery.anasthetic_types.first.anasthetic_type
          %td= surgery.chemicals.first.name
          %td= surgery.mechanicals.first.name
          %td= link_to 'Show', surgery
          %td
            - if can? :add, Surgery
              = link_to 'Edit', edit_surgery_path(surgery)
          %td
            - if can? :delete, Surgery
              = link_to 'Destroy', surgery, :method => :delete, :data => { :confirm => 'Are you sure?' }

    %br
    - if can? :add, Surgery
      = link_to 'New Surgery', new_surgery_path, class: "button tiny"
