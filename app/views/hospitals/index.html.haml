.row
	.large-12.columns
		%h5.subheader List of Hospitals          
		= link_to 'New Hospital', new_hospital_path, class: "button tiny"
		%table
			%tr
				%th Name
				%th Location
				%th Website
				%th Email
				%th Approve
				%th
				%th

			- @hospitals.each do |hospital|
				%tr
					%td= link_to hospital.name, hospital_path(hospital)
					%td= hospital.location
					%td= hospital.website
					%td= hospital.email
					- if !hospital.approved
						%td= link_to "Approve", hospital_approve_path(hospital), method: :post, data: { confirm: 'Are you sure?' }
					- else
						%td= link_to "Unapprove", hospital_approve_path(hospital), method: :post, data: { confirm: 'Are you sure?' }
					%td= link_to 'Edit', edit_hospital_path(hospital)
					%td= link_to 'Destroy', hospital, :method => :delete, :data => { :confirm => 'Are you sure?' }
