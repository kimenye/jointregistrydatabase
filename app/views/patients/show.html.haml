.row
  .large-6.columns
    %p#notice= notice

    %p
      %b Medical record number:
      = @patient.medical_record_number if !@patient.medical_record_number.nil?
    %p
      %b Name:
      = @patient.name
    %p
      %b Date of birth:
      = @patient.date_of_birth
    %p
      %b Gender:
      = @patient.gender
    %p
      %b Weight:
      = @patient.weight
    %p
      %b Height:
      = @patient.height

    = link_to 'Edit', edit_patient_path(@patient)
    \|
    = link_to 'Back', patients_path
