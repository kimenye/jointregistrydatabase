= simple_form_for(@patient) do |f|
  = f.error_notification

  .form-inputs
    = f.input :medical_record_number
    = f.input :name
    = f.input :date_of_birth, as: :string
    = f.input :gender
    = f.input :weight
    = f.input :height
    / = f.input :race
    / = f.input :postcode
    = f.input :id_number

  .form-actions
    = f.button :submit, class: "button tiny"
