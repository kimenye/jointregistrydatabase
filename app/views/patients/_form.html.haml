= simple_form_for(@patient) do |f|
  = f.error_notification

  .form-inputs
    = f.input :medical_record_number
    = f.input :name
    = f.input :date_of_birth
    = f.input :gender
    = f.input :weight
    = f.input :height
    = f.input :race
    = f.input :postcode
    = f.input :nhif_number

  .form-actions
    = f.button :submit
